BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'

            Button:
                # id: increase_miles_input
                font_size: 48
                color: (0, 0, 1, 1)
                on_press: app.handle_increase(int(input_miles.text))

            Button:

                font_size: 48
                color: (0, 0, 1, 1)
                on_press: app.handle_decrease(int(input_miles.text))

        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            multiline: False

    Button:
        id: convert_miles
        text: 'Convert m to km'
        on_press: app.handle_convert(int(input_miles.text))

    Label:
        id: kilometres_label
        font_size: 24
        color: (1, 1, 1, 1)